{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": "",
      "aws_region": "",
      "aws_ami_id": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "source_ami": "{{user `aws_ami_id`}}",
        "source_ami_filter": {
          "filters": {
          "virtualization-type": "hvm",
          "name": "*",
          "root-device-type": "ebs"
          },
          "owners": ["018471812555"],
          "most_recent": true
        }  
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "packer-builder-goldenami-{{timestamp}}"
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "script": "provision-script.sh"
      }
    ]
  }
